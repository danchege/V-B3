{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "frontend/index.html",
      "use": "@vercel/static"
    }
  ],
  "buildCommand": "cd frontend && npm install && npm run build",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://v-b3.onrender.com/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/index.html"
    }
  ]
}
